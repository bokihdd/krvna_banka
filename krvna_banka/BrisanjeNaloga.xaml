<Window x:Class="krvna_banka.BrisanjeNaloga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:krvna_banka"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="BrisanjeNaloga"  Height="350" Width="350" Closed="Window_Closed">
        
    <Grid>
        <Label Content="Korisnicko ime" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="KorisnickoImeTextBox" HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="16"/>
        <Label Content="Sifra" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="SifraTextBox" HorizontalAlignment="Center" Margin="0,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="16"/>
        <Button x:Name="ObrisiNalogButton" Content="Obrisi nalog" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="40" FontSize="16" Margin="0,225,0,0" Click="ObrisiNalogButton_Click"/>
    </Grid>
</Window>
