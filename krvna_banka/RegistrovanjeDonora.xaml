        <TextBox x:Name="KolicinaKrviTextBox" HorizontalAlignment="Center" Margin="0,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="16"/>
        <Button x:Name="RegistrovanjeDonoraButton" Content="Registruj" HorizontalAlignment="Left" Margin="175,397,0,0" VerticalAlignment="Top" Width="172" Height="48" FontSize="20" Click="RegistrovanjeDonoraButton_Click_1" FontFamily="Yu Gothic" FontWeight="Bold"/>
        <ComboBox x:Name="KrvnaGrupaComboBox" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Width="212"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="2" Margin="0,52,0,0" VerticalAlignment="Top" Width="524"/>

    </Grid>


</Window>