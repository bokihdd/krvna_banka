<Window x:Class="krvna_banka.PrikazInventara"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:krvna_banka"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PrikazInventara" Height="450" Width="600" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dtGrid" d:ItemsSource="{d:SampleData ItemCount=5}"  VerticalAlignment="Top" CanUserAddRows="False" ColumnWidth="*" Margin="0,98,0,0">
        <DataGrid.Resources>
            <Style TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="Background" Value="Wheat"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                <Setter Property="BorderBrush" Value="Black"/>


            </Style>
        </DataGrid.Resources>



        </DataGrid>
    </Grid>
</Window>
